{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my/my-tw-preset": ["libs/my-tw-preset/src/index.ts"],
      "@story-teller/libgen-plugin": ["libgen-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
